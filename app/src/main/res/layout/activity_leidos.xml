<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.soft.grecio.reader.Leidos"
    android:background="#0037ff0b">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
    <TextView android:text="Ruta:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblRuta"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vivienda:"
        android:id="@+id/lblVivienda"
        android:layout_below="@+id/lblRuta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Direccion:"
        android:id="@+id/lblDireccion"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medidor:"
        android:id="@+id/lblMedidor"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Consumo:"
        android:id="@+id/lblConsumo"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha:"
        android:id="@+id/lblFecha"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Observaciones:"
        android:id="@+id/lblObservaciones"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Código de Observación:"
        android:id="@+id/lblCodigoObservacion"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="98dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Anterior"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="left"
            android:background="@drawable/border_button"
            android:id="@+id/btnAnterior" />

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:layout_gravity="right"
            android:background="@drawable/border_button"
            android:id="@+id/btnSiguiente" />
    </LinearLayout>
</LinearLayout>
